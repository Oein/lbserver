generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
}

model Game {
  id     String  @id
  scores Score[]
}

model Score {
  id             String   @id @default(cuid())
  value          Int
  player         String
  createdAt      DateTime @default(now())
  additionalInfo String

  game   Game   @relation(fields: [gameId], references: [id])
  gameId String
}
